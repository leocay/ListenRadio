<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ListenToTheRradio.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ListenToTheRradio.Views"
    >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*" />
            <RowDefinition Height="1.2*" />
        </Grid.RowDefinitions>
        <CarouselView
            Grid.Row="0"
            ItemsSource="{Binding PageList}"
            Loop="False">
            <CarouselView.ItemTemplate>
                <DataTemplate>
                    <ContentView Content="{Binding .}" />
                </DataTemplate>
            </CarouselView.ItemTemplate>
        </CarouselView>

        <local:MediaPlayerController Grid.Row="1"/>
        
    </Grid>


</ContentPage>
